<div class="container">
    <div class="row">

        <div class="col-xs-12 col-md-3 padding-top">
            <form {{action 'save' on="submit" }}>
                <div class="form-group">
                    <label>Title:</label> {{input value=title class="form-control"}} </div>
                <div class="form-group">
                    <label>URL(http://):</label> {{input value=url class="form-control"}} </div>
                <div class="form-group">
                    <label>Description:</label> {{textarea rows=10 value=description class="form-control"}} </div>
                <div class="form-group">
                    <label>Keywords:</label> {{input value=keywords class="form-control"}} </div>
                <div class="form-group">
                    <label>System:</label> {{input value=system class="form-control"}} </div>
                <div class="form-group">
                    <label>Country:</label> {{input value=country class="form-control"}} </div>
                <button class="btn btn-primary">Add</button>
            </form>
        </div>

        <div class="col-xs-12 col-md-9 padding-top">
            <div class="row">
               {{#each model as |item|}}

                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="card text-xs-right">
                            <div class="card-block">
                                <h4 class="card-title">{{item.title}}</h4>
                                <p> {{item.url}}</p>
                                <p> {{item.description}}</p>
                                <p> {{item.system}}</p>
                                <p> {{item.country}}</p>
                                <p> {{item.keywords}}</p>
                                {{#link-to 'entry.show' item.id class="btn btn-primary" tagName="button" }}
                                view
                                {{/link-to}}
                            </div>
                    </div>
                </div>

                {{/each}}
            </div>
        </div>

    </div>
</div>
