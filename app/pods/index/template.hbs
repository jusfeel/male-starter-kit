<div class="container">
    <div class="row">

        <div class="col-xs-12 col-md-3 padding-top">
            <form {{action 'save' on="submit" }}>
                <div class="form-group">
                    {{input value=title class="form-control" placeholder="Title"}} </div>
                <div class="form-group">
                    {{input value=url class="form-control" placeholder="http://..."}} </div>
                <div class="form-group">
                    {{textarea rows=10 value=description class="form-control" placeholder="Description"}} </div>
                <div class="form-group">
                    {{input value=keywords class="form-control" placeholder="Keywords"}}</div>
                <div class="form-group">
                    {{input value=system class="form-control" placeholder="System"}} </div>
                <div class="form-group">
                    {{#x-select class="form-control" value=country as |xs|}}
                      {{#each model.countries as |item|}}
                      {{#xs.option value=item.id}}{{item.name}}{{/xs.option}}
                      {{/each}}
                    {{/x-select}}
                </div>
                <button class="btn btn-primary">Add</button>
            </form>
        </div>

        <div class="col-xs-12 col-md-9 padding-top">
          {{entry-list model=model countries=model.countries}}
        </div>

    </div>
</div>
