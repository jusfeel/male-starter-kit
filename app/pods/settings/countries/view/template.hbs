{{outlet}}
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-6 padding-top">
            <form>
                <div class="form-group">
                    <label>Country Code:</label>
                    {{input value=model.code class="form-control"}}
                </div>
                <div class="form-group">
                    <label>Country Name:</label>
                    {{input value=model.name class="form-control"}}
                </div>
                <div class="btn-group">
                    <button type="delete" class="btn btn-danger" {{action 'delete' on='click' }}>Delete</button>
                    <button type="submit" class="btn btn-success" {{action 'update' on='click' }}>Modify</button>
                    {{#link-to 'settings.countries' tagName="button" class="btn btn-primary"}}Index{{/link-to}}
                </div>
            </form>
        </div>
    </div>
</div>
