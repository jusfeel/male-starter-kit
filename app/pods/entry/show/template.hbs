<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-6 padding-top">
            <form>
                <div class="form-group">
                    <label>Title:</label>
                    {{input value=model.title class="form-control"}}
                </div>
                <div class="form-group">
                    <label>Url:</label>
                    {{input value=model.url class="form-control"}}
                </div>
                <div class="form-group">
                    <label>Description:</label>
                    {{textarea value=model.description cols="40" rows="10" class="form-control"}}
                </div>
                <div class="form-group">
                    <label>keywords:</label>
                    {{input value=model.keywords class="form-control"}}
                </div>
                <div class="form-group">
                    <label>System:</label>
                    {{input value=model.system class="form-control"}}
                </div>
                <div class="form-group">
                    <label>Country:</label>
                    {{input value=model.country class="form-control"}}
                </div>
                <div class="btn-group">
                    <button type="delete" class="btn btn-danger" {{action 'delete' on='click' }}>Delete</button>
                    <button type="submit" class="btn btn-success" {{action 'update' on='click' }}>Modify</button>
                    {{#link-to 'index' tagName="button" class="btn btn-primary"}}Index{{/link-to}}
                </div>
            </form>
        </div>
    </div>
</div>
